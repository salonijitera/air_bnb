<%= form_for @local_experience, url: {action: "update"} do |f| %>
  <p>
    <%= f.label :id %><br>
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, step: 0.01 %>
  </p>
  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.select :status, Localexperience.statuses.keys %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
